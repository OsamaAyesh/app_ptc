<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Top Title -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to Robin"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Logo Container -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#EAF7F4"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Robin Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/robin_logo" />
    </LinearLayout>

    <!-- Full Name -->
    <EditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="#222222"
        android:hintTextColor="#777777"
        android:backgroundTint="#BDBDBD"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Email -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#222222"
        android:hintTextColor="#777777"
        android:backgroundTint="#BDBDBD"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Password -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#222222"
        android:hintTextColor="#777777"
        android:backgroundTint="#BDBDBD"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Confirm Password -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#222222"
        android:hintTextColor="#777777"
        android:backgroundTint="#BDBDBD"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="18dp" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:backgroundTint="#1ABC9C"
        android:layout_marginBottom="18dp" />

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAlready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALREADY HAVE AN ACCOUNT? "
            android:textSize="12sp"
            android:textColor="#777777" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#1ABC9C" />
    </LinearLayout>

</LinearLayout>
